<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4 animate-fade-in" data-controller="modal" data-action="click->modal#close">
    <div class="glass rounded-3xl max-w-3xl w-full max-h-[90vh] overflow-y-auto animate-slide-down" data-action="click->modal#stopPropagation">
      <div class="p-8 md:p-12">
        <!-- Header -->
        <div class="flex justify-between items-start mb-8">
          <div>
            <h2 class="text-4xl font-black text-white mb-3">
              Get Your <span class="gradient-text">Free</span> Health Check
            </h2>
            <p class="text-gray-400 text-lg">
              30-minute technical audit of your startup's engineering practices
            </p>
          </div>
          <%= link_to root_path, class: "text-gray-400 hover:text-white transition-colors", data: { turbo_frame: "_top" } do %>
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          <% end %>
        </div>

        <%= turbo_frame_tag "health_check_form" do %>
          <%= form_with model: @submission, url: health_checks_path, data: { controller: "form" }, class: "space-y-6" do |f| %>
            <!-- Grid Layout for Inputs -->
            <div class="grid md:grid-cols-2 gap-6">
              <!-- Company Name -->
              <div class="md:col-span-2">
                <%= f.label :company_name, class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                  <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                  Company Name
                <% end %>
                <%= f.text_field :company_name, required: true,
                    class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all",
                    placeholder: "Your Company" %>
              </div>

              <!-- Contact Name -->
              <div>
                <%= f.label :contact_name, "Your Name", class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                  <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  Your Name
                <% end %>
                <%= f.text_field :contact_name, required: true,
                    class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all",
                    placeholder: "John Doe" %>
              </div>

              <!-- Email -->
              <div>
                <%= f.label :email, class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                  <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Email
                <% end %>
                <%= f.email_field :email, required: true,
                    class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all",
                    placeholder: "john@company.com" %>
              </div>

              <!-- Phone -->
              <div>
                <%= f.label :phone, "Phone (Optional)", class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  Phone (Optional)
                <% end %>
                <%= f.telephone_field :phone,
                    class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all",
                    placeholder: "(555) 123-4567" %>
              </div>

              <!-- Company Stage -->
              <div>
                <%= f.label :company_stage, class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                  <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                  </svg>
                  Company Stage
                <% end %>
                <%= f.select :company_stage,
                    options_for_select([
                      ["Pre-seed", "pre_seed"],
                      ["Seed", "seed"],
                      ["Series A", "series_a"],
                      ["Series B+", "series_b_plus"]
                    ]),
                    { prompt: "Select stage" },
                    class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all" %>
              </div>
            </div>

            <!-- Team Size -->
            <div>
              <%= f.label :team_size, "Current Engineering Team Size", class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                Current Engineering Team Size
              <% end %>
              <%= f.number_field :team_size, min: 0,
                  class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all",
                  placeholder: "e.g., 3" %>
            </div>

            <!-- Tech Stack -->
            <div>
              <%= f.label :tech_stack, "Current Tech Stack", class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
                Current Tech Stack
              <% end %>
              <%= f.text_area :tech_stack, rows: 3,
                  placeholder: "e.g., React, Node.js, PostgreSQL, AWS",
                  class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all resize-none" %>
            </div>

            <!-- Main Challenges -->
            <div>
              <%= f.label :main_challenges, "Main Technical Challenges", class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Main Technical Challenges
              <% end %>
              <%= f.text_area :main_challenges, rows: 4,
                  placeholder: "What technical challenges are you facing? Be specific.",
                  class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white placeholder-gray-500 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all resize-none" %>
            </div>

            <!-- Urgency -->
            <div>
              <%= f.label :urgency, "Timeline", class: "block text-sm font-bold text-white mb-2 flex items-center" do %>
                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Timeline
              <% end %>
              <%= f.select :urgency,
                  options_for_select([
                    ["Need help immediately", "immediate"],
                    ["This quarter", "this_quarter"],
                    ["Just exploring options", "exploratory"]
                  ]),
                  { prompt: "When do you need help?" },
                  class: "w-full px-6 py-4 bg-gray-900/50 border-2 border-gray-700 rounded-xl text-white focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all" %>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <%= f.submit "Request Free Health Check â†’",
                  data: { form_target: "submit" },
                  class: "w-full bg-gradient-primary text-gray-900 px-8 py-5 rounded-xl font-black text-xl hover:shadow-2xl hover:shadow-green-500/50 transition-all cursor-pointer btn-glow" %>
            </div>

            <!-- Privacy Note -->
            <p class="text-sm text-gray-500 text-center">
              We respect your privacy. Your information will only be used to contact you about your health check.
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
