<% content_for :page_title, "CRM Inquiry: #{@inquiry.company_name}" %>

<div class="mb-6">
  <%= link_to admin_crm_inquiries_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white transition-base" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    CRM Inquiries
  <% end %>
</div>

<div class="flex justify-between items-start mb-8">
  <div>
    <h2 class="text-2xl font-bold text-white mb-2"><%= @inquiry.company_name %></h2>
    <span class="inline-block px-2 py-1 text-xs font-semibold rounded
      <%= case @inquiry.status
          when 'pending' then 'bg-yellow-500/20 text-yellow-400'
          when 'contacted' then 'bg-blue-500/20 text-blue-400'
          when 'converted' then 'bg-green-500/20 text-green-400'
          else 'bg-gray-500/20 text-gray-400'
          end %>">
      <%= @inquiry.status&.capitalize %>
    </span>
  </div>
  <% if @inquiry.contact.present? %>
    <%= link_to "View Contact", admin_contact_path(@inquiry.contact), class: "btn-primary text-sm py-2 px-4" %>
  <% end %>
</div>

<div class="grid md:grid-cols-2 gap-8">
  <div class="border border-gray-700 rounded-lg p-6 space-y-4">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Contact Info</h3>
    <div>
      <div class="text-xs text-gray-500 mb-1">Name</div>
      <div class="text-white"><%= @inquiry.contact_name %></div>
    </div>
    <div>
      <div class="text-xs text-gray-500 mb-1">Email</div>
      <div class="text-white"><%= @inquiry.email %></div>
    </div>
    <% if @inquiry.phone.present? %>
      <div>
        <div class="text-xs text-gray-500 mb-1">Phone</div>
        <div class="text-white"><%= @inquiry.phone %></div>
      </div>
    <% end %>
  </div>

  <div class="border border-gray-700 rounded-lg p-6 space-y-4">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Company Details</h3>
    <div>
      <div class="text-xs text-gray-500 mb-1">Company</div>
      <div class="text-white"><%= @inquiry.company_name %></div>
    </div>
  </div>
</div>

<% if @inquiry.message.present? %>
  <div class="mt-8 border border-gray-700 rounded-lg p-6">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Message</h3>
    <div class="text-gray-300 leading-relaxed"><%= simple_format(@inquiry.message) %></div>
  </div>
<% end %>

<div class="mt-8 text-sm text-gray-500">
  Submitted <%= @inquiry.created_at.strftime("%B %d, %Y at %I:%M %p") %>
</div>
