<% content_for :page_title, "Invoices" %>

<div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Outstanding</div>
    <div class="text-3xl font-bold text-white"><%= number_to_currency(@outstanding_total) %></div>
  </div>
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Draft</div>
    <div class="text-3xl font-bold text-white"><%= number_to_currency(@draft_total) %></div>
  </div>
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Paid</div>
    <div class="text-3xl font-bold text-white"><%= number_to_currency(@paid_total) %></div>
  </div>
</div>

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
  <div class="flex flex-wrap gap-2">
    <%= link_to "All", admin_invoices_path, class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' unless params[:status].present? || params[:kind].present?} #{'text-gray-400 hover:text-white' if params[:status].present? || params[:kind].present?} transition-base" %>
    <%= link_to "Draft", admin_invoices_path(status: "draft"), class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' if params[:status] == 'draft'} #{'text-gray-400 hover:text-white' unless params[:status] == 'draft'} transition-base" %>
    <%= link_to "Sent", admin_invoices_path(status: "sent"), class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' if params[:status] == 'sent'} #{'text-gray-400 hover:text-white' unless params[:status] == 'sent'} transition-base" %>
    <%= link_to "Paid", admin_invoices_path(status: "paid"), class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' if params[:status] == 'paid'} #{'text-gray-400 hover:text-white' unless params[:status] == 'paid'} transition-base" %>
    <%= link_to "Estimates", admin_invoices_path(kind: "estimate"), class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' if params[:kind] == 'estimate'} #{'text-gray-400 hover:text-white' unless params[:kind] == 'estimate'} transition-base" %>
  </div>
  <div class="flex gap-2">
    <%= link_to "New Invoice", new_admin_invoice_path, class: "btn-primary text-sm py-2 px-4" %>
    <%= link_to "New Estimate", new_admin_invoice_path(kind: "estimate"), class: "btn-secondary text-sm py-2 px-4" %>
  </div>
</div>

<% if @invoices.any? %>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-700 text-xs font-semibold text-gray-400 uppercase tracking-wider">
          <th class="text-left py-4 pr-4">Number</th>
          <th class="text-left py-4 pr-4">Client</th>
          <th class="text-left py-4 pr-4">Type</th>
          <th class="text-left py-4 pr-4">Status</th>
          <th class="text-right py-4 pr-4">Total</th>
          <th class="text-left py-4 pr-4">Due</th>
          <th class="text-right py-4">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @invoices.each do |invoice| %>
          <tr class="border-b border-gray-800 hover:bg-white/5 transition-base">
            <td class="py-4 pr-4">
              <%= link_to invoice.number, admin_invoice_path(invoice), class: "text-white font-semibold hover:text-accent transition-base" %>
            </td>
            <td class="py-4 pr-4 text-gray-400"><%= invoice.contact.full_name %></td>
            <td class="py-4 pr-4">
              <span class="text-xs text-gray-400 uppercase"><%= invoice.kind %></span>
            </td>
            <td class="py-4 pr-4">
              <span class="inline-block px-2 py-1 text-xs font-semibold rounded
                <%= case invoice.status
                    when 'draft' then 'bg-gray-500/20 text-gray-400'
                    when 'sent' then 'bg-blue-500/20 text-blue-400'
                    when 'viewed' then 'bg-purple-500/20 text-purple-400'
                    when 'paid' then 'bg-green-500/20 text-green-400'
                    when 'overdue' then 'bg-red-500/20 text-red-400'
                    when 'void' then 'bg-gray-500/20 text-gray-500'
                    end %>">
                <%= invoice.status.capitalize %>
              </span>
            </td>
            <td class="py-4 pr-4 text-right text-white font-semibold"><%= number_to_currency(invoice.total) %></td>
            <td class="py-4 pr-4 text-gray-400 text-sm"><%= invoice.due_date&.strftime("%b %d, %Y") %></td>
            <td class="py-4 text-right">
              <div class="flex justify-end items-center gap-4">
                <%= link_to "Edit", edit_admin_invoice_path(invoice), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
                <%= button_to "Delete", admin_invoice_path(invoice), method: :delete,
                    class: "text-sm text-red-400 hover:text-red-300 transition-base",
                    data: { turbo_confirm: "Delete #{invoice.number}?" } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "admin/shared/pagination", pagy: @pagy %>
<% else %>
  <div class="text-center py-16 border border-gray-700 rounded-lg">
    <p class="text-gray-400 text-lg mb-6">No invoices yet.</p>
    <%= link_to "Create your first invoice", new_admin_invoice_path, class: "btn-primary" %>
  </div>
<% end %>
