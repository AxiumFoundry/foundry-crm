<% content_for :page_title, "#{@invoice.kind.capitalize} #{@invoice.number}" %>

<div class="mb-6">
  <%= link_to admin_invoices_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white transition-base" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Invoices
  <% end %>
</div>

<div class="flex flex-col sm:flex-row justify-between items-start gap-4 mb-8">
  <div>
    <h2 class="text-2xl font-bold text-white mb-2"><%= @invoice.number %></h2>
    <div class="flex items-center gap-3">
      <span class="text-xs text-gray-400 uppercase"><%= @invoice.kind %></span>
      <span class="inline-block px-2 py-1 text-xs font-semibold rounded
        <%= case @invoice.status
            when 'draft' then 'bg-gray-500/20 text-gray-400'
            when 'sent' then 'bg-blue-500/20 text-blue-400'
            when 'viewed' then 'bg-purple-500/20 text-purple-400'
            when 'paid' then 'bg-green-500/20 text-green-400'
            when 'overdue' then 'bg-red-500/20 text-red-400'
            when 'void' then 'bg-gray-500/20 text-gray-500'
            end %>">
        <%= @invoice.status.capitalize %>
      </span>
      <%= link_to @invoice.contact.full_name, admin_contact_path(@invoice.contact), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
    </div>
  </div>
  <div class="flex gap-3">
    <% if @invoice.status == "draft" %>
      <%= button_to "Mark Sent", admin_invoice_sendings_path(invoice_id: @invoice.id),
          class: "btn-primary text-sm py-2 px-4" %>
    <% end %>
    <% if @invoice.status.in?(%w[sent viewed overdue]) %>
      <%= button_to "Mark Paid", admin_invoice_payments_path(invoice_id: @invoice.id),
          class: "btn-primary text-sm py-2 px-4" %>
    <% end %>
    <%= link_to "PDF", admin_invoice_pdf_path(@invoice), target: "_blank", class: "btn-secondary text-sm py-2 px-4" %>
    <%= link_to "Edit", edit_admin_invoice_path(@invoice), class: "btn-secondary text-sm py-2 px-4" %>
  </div>
</div>

<div class="grid md:grid-cols-3 gap-6 mb-8">
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Issued</div>
    <div class="text-white"><%= @invoice.issued_date&.strftime("%B %d, %Y") || "Not set" %></div>
  </div>
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Due</div>
    <div class="text-white"><%= @invoice.due_date&.strftime("%B %d, %Y") || "Not set" %></div>
  </div>
  <% if @invoice.paid_date.present? %>
    <div class="border border-gray-700 rounded-lg p-6">
      <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Paid</div>
      <div class="text-white"><%= @invoice.paid_date.strftime("%B %d, %Y") %></div>
    </div>
  <% end %>
</div>

<div class="border border-gray-700 rounded-lg overflow-hidden mb-8 overflow-x-auto">
  <table class="w-full min-w-[400px]">
    <thead>
      <tr class="border-b border-gray-700 text-xs font-semibold text-gray-400 uppercase tracking-wider">
        <th class="text-left p-4">Description</th>
        <th class="text-right p-4">Qty</th>
        <th class="text-right p-4">Unit Price</th>
        <th class="text-right p-4">Total</th>
      </tr>
    </thead>
    <tbody>
      <% @invoice.line_items.each do |item| %>
        <tr class="border-b border-gray-800">
          <td class="p-4 text-white"><%= item.description %></td>
          <td class="p-4 text-right text-gray-400"><%= item.quantity %></td>
          <td class="p-4 text-right text-gray-400"><%= number_to_currency(item.unit_price) %></td>
          <td class="p-4 text-right text-white"><%= number_to_currency(item.total) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr class="border-b border-gray-700">
        <td colspan="3" class="p-4 text-right text-gray-400">Subtotal</td>
        <td class="p-4 text-right text-white"><%= number_to_currency(@invoice.subtotal) %></td>
      </tr>
      <% if @invoice.tax_rate.to_f > 0 %>
        <tr class="border-b border-gray-700">
          <td colspan="3" class="p-4 text-right text-gray-400">Tax (<%= @invoice.tax_rate %>%)</td>
          <td class="p-4 text-right text-white"><%= number_to_currency(@invoice.tax) %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="3" class="p-4 text-right text-white font-bold text-lg">Total</td>
        <td class="p-4 text-right text-white font-bold text-lg"><%= number_to_currency(@invoice.total) %></td>
      </tr>
    </tfoot>
  </table>
</div>

<% if @invoice.notes.present? %>
  <div class="border border-gray-700 rounded-lg p-6 mb-8">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Notes</h3>
    <div class="text-gray-300 leading-relaxed"><%= simple_format(@invoice.notes) %></div>
  </div>
<% end %>

<% if @invoice.internal_notes.present? %>
  <div class="border border-gray-700 rounded-lg p-6">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Internal Notes</h3>
    <div class="text-gray-300 leading-relaxed"><%= simple_format(@invoice.internal_notes) %></div>
  </div>
<% end %>
