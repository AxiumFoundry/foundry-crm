<%= form_with model: @invoice, url: url, class: "space-y-6" do |f| %>
  <% if @invoice.errors.any? %>
    <div class="bg-red-500/10 border border-red-500/30 p-4 rounded-lg">
      <ul class="list-disc list-inside text-red-300 text-sm space-y-1">
        <% @invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :kind %>

  <div class="grid md:grid-cols-3 gap-6">
    <div>
      <%= f.label :number, class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.text_field :number, required: true,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base" %>
    </div>
    <div>
      <%= f.label :contact_id, "Client", class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.collection_select :contact_id, Contact.order(:first_name), :id, :full_name,
          { prompt: "Select client" },
          class: "w-full px-4 py-3 bg-navy border border-gray-700 text-white focus:border-primary focus:outline-none rounded transition-base" %>
    </div>
    <div>
      <%= f.label :project_id, "Project", class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.collection_select :project_id, Project.order(:name), :id, :name,
          { include_blank: "None" },
          class: "w-full px-4 py-3 bg-navy border border-gray-700 text-white focus:border-primary focus:outline-none rounded transition-base" %>
    </div>
  </div>

  <div class="grid md:grid-cols-4 gap-6">
    <div>
      <%= f.label :status, class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.select :status, Invoice::STATUSES.map { |s| [s.capitalize, s] },
          {}, class: "w-full px-4 py-3 bg-navy border border-gray-700 text-white focus:border-primary focus:outline-none rounded transition-base" %>
    </div>
    <div>
      <%= f.label :issued_date, class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.date_field :issued_date,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white focus:border-primary focus:outline-none rounded transition-base" %>
    </div>
    <div>
      <%= f.label :due_date, class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.date_field :due_date,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white focus:border-primary focus:outline-none rounded transition-base" %>
    </div>
    <div>
      <%= f.label :tax_rate, "Tax Rate (%)", class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.number_field :tax_rate, step: 0.01, min: 0, max: 100,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base",
          placeholder: "0.00" %>
    </div>
  </div>

  <fieldset class="border border-gray-700 p-3 sm:p-6 rounded-lg">
    <legend class="text-xs font-semibold text-gray-300 uppercase tracking-wider px-2">Line Items</legend>

    <div id="line-items" class="space-y-4">
      <%= f.fields_for :line_items do |li| %>
        <div class="grid grid-cols-1 sm:grid-cols-12 gap-4 items-end line-item border-b border-gray-700/50 pb-4 sm:border-0 sm:pb-0">
          <div class="sm:col-span-5">
            <label class="block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider sm:<%= li.index == 0 ? '' : 'hidden' %>">Description</label>
            <%= li.text_field :description, required: true,
                class: "w-full px-3 py-2 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base text-sm",
                placeholder: "Description" %>
          </div>
          <div class="sm:col-span-2">
            <label class="block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider sm:<%= li.index == 0 ? '' : 'hidden' %>">Qty</label>
            <%= li.number_field :quantity, step: 0.01, min: 0, required: true,
                class: "w-full px-3 py-2 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base text-sm",
                placeholder: "1" %>
          </div>
          <div class="sm:col-span-3">
            <label class="block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider sm:<%= li.index == 0 ? '' : 'hidden' %>">Unit Price (cents)</label>
            <%= li.number_field :unit_price_cents, min: 0, required: true,
                class: "w-full px-3 py-2 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base text-sm",
                placeholder: "10000" %>
          </div>
          <div class="sm:col-span-2">
            <%= li.hidden_field :_destroy, class: "destroy-field" %>
            <button type="button" class="text-red-400 hover:text-red-300 text-sm transition-base"
                    onclick="this.closest('.line-item').querySelector('.destroy-field').value='1'; this.closest('.line-item').style.display='none'">
              Remove
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </fieldset>

  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :notes, "Client Notes", class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.text_area :notes, rows: 3,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base resize-none",
          placeholder: "Notes visible to client..." %>
    </div>
    <div>
      <%= f.label :internal_notes, class: "block text-xs font-semibold text-gray-300 mb-2 uppercase tracking-wider" %>
      <%= f.text_area :internal_notes, rows: 3,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base resize-none",
          placeholder: "Internal notes..." %>
    </div>
  </div>

  <div class="flex gap-4 pt-4">
    <%= f.submit class: "btn-primary text-base py-3 px-6 cursor-pointer" %>
    <%= link_to "Cancel", admin_invoices_path, class: "btn-secondary text-base py-3 px-6" %>
  </div>
<% end %>
