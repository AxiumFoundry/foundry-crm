<% content_for :page_title, "Chat Conversations" %>

<% if @conversations.any? %>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-700 text-xs font-semibold text-gray-400 uppercase tracking-wider">
          <th class="text-left py-4 pr-4">Started</th>
          <th class="text-left py-4 pr-4">Messages</th>
          <th class="text-left py-4 pr-4">Status</th>
          <th class="text-left py-4 pr-4">Human Requested</th>
          <th class="text-left py-4 pr-4">Last Activity</th>
          <th class="text-right py-4">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @conversations.each do |conversation| %>
          <tr class="border-b border-gray-800 hover:bg-white/5 transition-base">
            <td class="py-4 pr-4 text-gray-400"><%= conversation.created_at.strftime("%b %d, %Y %l:%M %p") %></td>
            <td class="py-4 pr-4 text-white"><%= conversation.chat_messages.count %></td>
            <td class="py-4 pr-4">
              <% if conversation.status == "active" %>
                <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-green-500/20 text-green-400">Active</span>
              <% else %>
                <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-gray-500/20 text-gray-400">Inactive</span>
              <% end %>
            </td>
            <td class="py-4 pr-4">
              <% if conversation.wants_human? %>
                <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-accent/20 text-accent">Yes</span>
              <% else %>
                <span class="text-gray-500 text-sm">No</span>
              <% end %>
            </td>
            <td class="py-4 pr-4 text-gray-400"><%= time_ago_in_words(conversation.last_activity_at) %> ago</td>
            <td class="py-4 text-right">
              <%= link_to "View", admin_chat_conversation_path(conversation), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "admin/shared/pagination", pagy: @pagy %>
<% else %>
  <div class="text-center py-16 border border-gray-700 rounded-lg">
    <p class="text-gray-400 text-lg">No conversations yet.</p>
  </div>
<% end %>
