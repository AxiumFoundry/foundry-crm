<section class="section-spacing-md bg-navy">
  <div class="container mx-auto max-w-6xl px-8 lg:px-16">
    <div class="flex justify-between items-center mb-12">
      <div class="border-l-4 border-primary pl-6">
        <h1 class="text-3xl font-bold text-white">Case Studies</h1>
      </div>
      <%= link_to "New Case Study", new_admin_case_study_path, class: "btn-primary" %>
    </div>

    <% if @case_studies.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-700 text-xs font-semibold text-gray-400 uppercase tracking-wider">
              <th class="text-left py-4 pr-4">Client</th>
              <th class="text-left py-4 pr-4">Industry</th>
              <th class="text-left py-4 pr-4">Status</th>
              <th class="text-left py-4 pr-4">Position</th>
              <th class="text-right py-4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @case_studies.each do |case_study| %>
              <tr class="border-b border-gray-800 hover:bg-white/5 transition-base">
                <td class="py-4 pr-4">
                  <span class="text-white font-semibold"><%= case_study.client_name %></span>
                  <% if case_study.featured? %>
                    <span class="ml-2 text-xs text-accent font-semibold uppercase">Featured</span>
                  <% end %>
                </td>
                <td class="py-4 pr-4 text-gray-400"><%= case_study.industry %></td>
                <td class="py-4 pr-4">
                  <% if case_study.published? %>
                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-green-500/20 text-green-400">Published</span>
                  <% else %>
                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-gray-500/20 text-gray-400">Draft</span>
                  <% end %>
                </td>
                <td class="py-4 pr-4 text-gray-400"><%= case_study.position %></td>
                <td class="py-4 text-right">
                  <div class="flex justify-end gap-4">
                    <%= link_to "View", admin_case_study_path(case_study), class: "text-sm text-gray-400 hover:text-white transition-base" %>
                    <%= link_to "Edit", edit_admin_case_study_path(case_study), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
                    <%= button_to "Delete", admin_case_study_path(case_study), method: :delete,
                        class: "text-sm text-red-400 hover:text-red-300 transition-base",
                        data: { turbo_confirm: "Are you sure you want to delete \"#{case_study.client_name}\"?" } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-16">
        <p class="text-gray-400 text-lg mb-6">No case studies yet.</p>
        <%= link_to "Create your first case study", new_admin_case_study_path, class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
