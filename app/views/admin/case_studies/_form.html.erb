<%= form_with model: @case_study, url: url, class: "space-y-8" do |f| %>
  <% if @case_study.errors.any? %>
    <div class="bg-red-500/10 border border-red-500/30 p-4 rounded-lg">
      <h3 class="text-red-400 font-semibold text-sm mb-2">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-red-300 text-sm space-y-1">
        <% @case_study.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-6">
    <div class="md:col-span-2">
      <%= f.label :client_name, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
      <%= f.text_field :client_name, required: true,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
          placeholder: "Client or project name" %>
    </div>

    <div>
      <%= f.label :industry, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
      <%= f.text_field :industry,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
          placeholder: "e.g., FinTech, HealthTech" %>
    </div>

    <div>
      <%= f.label :website_url, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
      <%= f.url_field :website_url,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
          placeholder: "https://example.com" %>
    </div>
  </div>

  <div>
    <%= f.label :challenge_summary, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_area :challenge_summary, required: true, rows: 2, maxlength: 200,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base resize-none",
        placeholder: "Brief problem statement (max 200 characters)" %>
  </div>

  <div>
    <%= f.label :challenge_details, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_area :challenge_details, rows: 5,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base resize-none",
        placeholder: "Detailed problem description" %>
  </div>

  <div>
    <%= f.label :solution, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_area :solution, rows: 5,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base resize-none",
        placeholder: "How the problem was solved" %>
  </div>

  <div>
    <%= f.label :results, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_area :results, rows: 4,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base resize-none",
        placeholder: "Outcomes and impact" %>
  </div>

  <div>
    <%= f.label :metrics, "Metrics (JSON)", class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_area :metrics, value: (@case_study.metrics ? JSON.pretty_generate(@case_study.metrics) : ""), rows: 4,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base font-mono text-sm",
        placeholder: '{"Speed": "2x faster", "Cost savings": "40%"}' %>
    <p class="text-xs text-gray-500 mt-2">Key-value pairs as JSON. Each pair becomes a metric card.</p>
  </div>

  <fieldset class="border border-gray-700 p-6 space-y-4">
    <legend class="text-xs font-semibold text-gray-300 uppercase tracking-wider px-2">Testimonial</legend>

    <div>
      <%= f.label :testimonial_quote, "Quote", class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
      <%= f.text_area :testimonial_quote, rows: 3,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base resize-none",
          placeholder: "Client testimonial text" %>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <%= f.label :testimonial_author, "Author", class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
        <%= f.text_field :testimonial_author,
            class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
            placeholder: "Jane Smith" %>
      </div>

      <div>
        <%= f.label :testimonial_role, "Role", class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
        <%= f.text_field :testimonial_role,
            class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
            placeholder: "CTO at Company" %>
      </div>
    </div>
  </fieldset>

  <div class="grid md:grid-cols-3 gap-6">
    <div>
      <%= f.label :position, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
      <%= f.number_field :position, min: 0,
          class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
          placeholder: "Display order" %>
    </div>

    <div class="flex items-center gap-3 pt-8">
      <%= f.check_box :featured, class: "w-5 h-5 accent-primary" %>
      <%= f.label :featured, "Featured", class: "text-sm font-semibold text-gray-300 uppercase tracking-wider" %>
    </div>

    <div class="flex items-center gap-3 pt-8">
      <%= f.check_box :published, class: "w-5 h-5 accent-primary" %>
      <%= f.label :published, "Published", class: "text-sm font-semibold text-gray-300 uppercase tracking-wider" %>
    </div>
  </div>

  <div class="flex gap-4 pt-6">
    <%= f.submit class: "btn-primary text-base py-4 px-8 cursor-pointer" %>
    <%= link_to "Cancel", admin_case_studies_path, class: "btn-secondary text-base py-4 px-8" %>
  </div>
<% end %>
