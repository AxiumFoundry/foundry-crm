<%= form_with model: @document, url: url, class: "space-y-8" do |f| %>
  <% if @document.errors.any? %>
    <div class="bg-red-500/10 border border-red-500/30 p-4 rounded-lg">
      <h3 class="text-red-400 font-semibold text-sm mb-2">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-red-300 text-sm space-y-1">
        <% @document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_field :title, required: true,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
        placeholder: "Document title (e.g., Services Overview, Pricing, Team)" %>
  </div>

  <div>
    <%= f.label :content, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
    <%= f.text_area :content, required: true, rows: 12,
        class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base resize-none",
        placeholder: "Knowledge base content that the AI assistant will use to answer questions..." %>
    <p class="text-xs text-gray-500 mt-2">This content will be embedded and used for AI-powered question answering.</p>
  </div>

  <div class="flex items-center gap-3">
    <%= f.check_box :active, class: "w-5 h-5 accent-primary" %>
    <%= f.label :active, "Active", class: "text-sm font-semibold text-gray-300 uppercase tracking-wider" %>
  </div>

  <div class="flex gap-4 pt-6">
    <%= f.submit class: "btn-primary text-base py-4 px-8 cursor-pointer" %>
    <%= link_to "Cancel", admin_knowledge_documents_path, class: "btn-secondary text-base py-4 px-8" %>
  </div>
<% end %>
