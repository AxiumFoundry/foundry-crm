<% if pagy.pages > 1 %>
  <nav class="mt-8 flex justify-center items-center gap-2" aria-label="Pagination">
    <% if pagy.previous %>
      <%= link_to pagy.page_url(pagy.previous), class: "px-3 py-2 text-sm text-gray-400 hover:text-white hover:bg-white/10 rounded transition-base" do %>
        &larr; Prev
      <% end %>
    <% else %>
      <span class="px-3 py-2 text-sm text-gray-600 cursor-not-allowed">&larr; Prev</span>
    <% end %>

    <% pagy.send(:series).each do |item| %>
      <% if item.is_a?(Integer) %>
        <%= link_to item, pagy.page_url(item), class: "px-3 py-2 text-sm text-gray-400 hover:text-white hover:bg-white/10 rounded transition-base" %>
      <% elsif item.is_a?(String) %>
        <span class="px-3 py-2 text-sm text-white bg-white/10 rounded font-semibold"><%= item %></span>
      <% elsif item == :gap %>
        <span class="px-2 py-2 text-sm text-gray-500">&hellip;</span>
      <% end %>
    <% end %>

    <% if pagy.next %>
      <%= link_to pagy.page_url(pagy.next), class: "px-3 py-2 text-sm text-gray-400 hover:text-white hover:bg-white/10 rounded transition-base" do %>
        Next &rarr;
      <% end %>
    <% else %>
      <span class="px-3 py-2 text-sm text-gray-600 cursor-not-allowed">Next &rarr;</span>
    <% end %>
  </nav>
<% end %>
