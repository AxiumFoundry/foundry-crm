<% content_for :page_title, @project.name %>

<div class="mb-6">
  <%= link_to admin_projects_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white transition-base" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Projects
  <% end %>
</div>

<div class="flex flex-col sm:flex-row justify-between items-start gap-4 mb-8">
  <div>
    <h2 class="text-2xl font-bold text-white mb-2"><%= @project.name %></h2>
    <div class="flex items-center gap-3">
      <span class="inline-block px-2 py-1 text-xs font-semibold rounded
        <%= case @project.status
            when 'proposed' then 'bg-gray-500/20 text-gray-400'
            when 'active' then 'bg-green-500/20 text-green-400'
            when 'paused' then 'bg-yellow-500/20 text-yellow-400'
            when 'completed' then 'bg-blue-500/20 text-blue-400'
            when 'cancelled' then 'bg-red-500/20 text-red-400'
            end %>">
        <%= @project.status.capitalize %>
      </span>
      <%= link_to @project.contact.full_name, admin_contact_path(@project.contact), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
    </div>
  </div>
  <div class="flex gap-3">
    <%= link_to "Edit", edit_admin_project_path(@project), class: "btn-primary text-sm py-2 px-4" %>
    <%= button_to "Delete", admin_project_path(@project), method: :delete,
        class: "btn-secondary text-sm py-2 px-4 text-red-400 border-red-400/30 hover:border-red-400",
        data: { turbo_confirm: "Delete \"#{@project.name}\"?" } %>
  </div>
</div>

<div class="grid md:grid-cols-3 gap-6 mb-8">
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Budget</div>
    <div class="text-xl font-bold text-white"><%= @project.budget ? number_to_currency(@project.budget) : "—" %></div>
  </div>
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Rate</div>
    <div class="text-xl font-bold text-white">
      <% if @project.rate_amount.present? %>
        <%= number_to_currency(@project.rate_amount) %><%= "/#{@project.rate_type}" if @project.rate_type.present? %>
      <% else %>
        —
      <% end %>
    </div>
  </div>
  <div class="border border-gray-700 rounded-lg p-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Timeline</div>
    <div class="text-xl font-bold text-white">
      <% if @project.start_date.present? %>
        <%= @project.start_date.strftime("%b %d") %><%= " — #{@project.end_date.strftime("%b %d, %Y")}" if @project.end_date.present? %>
      <% else %>
        Not set
      <% end %>
    </div>
  </div>
</div>

<% if @project.description.present? %>
  <div class="border border-gray-700 rounded-lg p-6 mb-8">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Description</h3>
    <div class="text-gray-300 leading-relaxed"><%= simple_format(@project.description) %></div>
  </div>
<% end %>

<div class="border border-gray-700 rounded-lg p-6 mb-8">
  <div class="flex justify-between items-center mb-6">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Milestones</h3>
  </div>

  <% if @milestones.any? %>
    <div class="space-y-3 mb-6">
      <% @milestones.each do |milestone| %>
        <div class="flex items-center justify-between p-3 rounded-lg border border-gray-700/50 hover:bg-white/5 transition-base">
          <div class="flex items-center gap-3">
            <% if milestone.completed? %>
              <%= button_to admin_milestone_completion_path(milestone), method: :delete, class: "shrink-0" do %>
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              <% end %>
              <span class="text-gray-500 line-through"><%= milestone.name %></span>
            <% else %>
              <%= button_to admin_milestone_completions_path(milestone_id: milestone.id), class: "shrink-0" do %>
                <svg class="w-5 h-5 text-gray-600 hover:text-gray-400 transition-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="9" stroke-width="2"/>
                </svg>
              <% end %>
              <span class="text-white"><%= milestone.name %></span>
            <% end %>
            <% if milestone.due_date.present? %>
              <span class="text-xs text-gray-500"><%= milestone.due_date.strftime("%b %d") %></span>
            <% end %>
          </div>
          <%= button_to admin_milestone_path(milestone), method: :delete,
              class: "text-gray-600 hover:text-red-400 transition-base shrink-0",
              data: { turbo_confirm: "Remove this milestone?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @milestone, url: admin_milestones_path, class: "flex flex-col sm:flex-row gap-3" do |f| %>
    <%= f.hidden_field :project_id, value: @project.id %>
    <%= f.text_field :name, placeholder: "Add milestone...",
        class: "flex-1 px-4 py-2 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none rounded transition-base text-sm" %>
    <%= f.date_field :due_date,
        class: "px-4 py-2 bg-transparent border border-gray-700 text-white focus:border-primary focus:outline-none rounded transition-base text-sm" %>
    <%= f.submit "Add", class: "btn-primary text-sm py-2 px-4 cursor-pointer" %>
  <% end %>
</div>

<% if @project.notes.present? %>
  <div class="border border-gray-700 rounded-lg p-6">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Notes</h3>
    <div class="text-gray-300 leading-relaxed"><%= simple_format(@project.notes) %></div>
  </div>
<% end %>
