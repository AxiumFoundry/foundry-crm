<% content_for :page_title, "Projects" %>

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
  <div class="flex flex-wrap gap-2">
    <%= link_to "All", admin_projects_path, class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' unless params[:status].present?} #{'text-gray-400 hover:text-white' if params[:status].present?} transition-base" %>
    <% Project::STATUSES.each do |status| %>
      <%= link_to status.capitalize, admin_projects_path(status: status), class: "px-3 py-1 text-sm rounded #{'bg-white/10 text-white' if params[:status] == status} #{'text-gray-400 hover:text-white' unless params[:status] == status} transition-base" %>
    <% end %>
  </div>
  <%= link_to "New Project", new_admin_project_path, class: "btn-primary text-sm py-2 px-4" %>
</div>

<% if @projects.any? %>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-700 text-xs font-semibold text-gray-400 uppercase tracking-wider">
          <th class="text-left py-4 pr-4">Project</th>
          <th class="text-left py-4 pr-4">Client</th>
          <th class="text-left py-4 pr-4">Status</th>
          <th class="text-left py-4 pr-4">Budget</th>
          <th class="text-left py-4 pr-4">Dates</th>
          <th class="text-right py-4">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr class="border-b border-gray-800 hover:bg-white/5 transition-base">
            <td class="py-4 pr-4">
              <%= link_to project.name, admin_project_path(project), class: "text-white font-semibold hover:text-accent transition-base" %>
            </td>
            <td class="py-4 pr-4 text-gray-400"><%= project.contact.full_name %></td>
            <td class="py-4 pr-4">
              <span class="inline-block px-2 py-1 text-xs font-semibold rounded
                <%= case project.status
                    when 'proposed' then 'bg-gray-500/20 text-gray-400'
                    when 'active' then 'bg-green-500/20 text-green-400'
                    when 'paused' then 'bg-yellow-500/20 text-yellow-400'
                    when 'completed' then 'bg-blue-500/20 text-blue-400'
                    when 'cancelled' then 'bg-red-500/20 text-red-400'
                    end %>">
                <%= project.status.capitalize %>
              </span>
            </td>
            <td class="py-4 pr-4 text-gray-400">
              <%= project.budget ? number_to_currency(project.budget) : "—" %>
            </td>
            <td class="py-4 pr-4 text-gray-400 text-sm">
              <% if project.start_date.present? %>
                <%= project.start_date.strftime("%b %d") %><%= " — #{project.end_date.strftime("%b %d")}" if project.end_date.present? %>
              <% else %>
                —
              <% end %>
            </td>
            <td class="py-4 text-right">
              <div class="flex justify-end items-center gap-4">
                <%= link_to "Edit", edit_admin_project_path(project), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
                <%= button_to "Delete", admin_project_path(project), method: :delete,
                    class: "text-sm text-red-400 hover:text-red-300 transition-base",
                    data: { turbo_confirm: "Delete \"#{project.name}\"?" } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "admin/shared/pagination", pagy: @pagy %>
<% else %>
  <div class="text-center py-16 border border-gray-700 rounded-lg">
    <p class="text-gray-400 text-lg mb-6">No projects yet.</p>
    <%= link_to "Create your first project", new_admin_project_path, class: "btn-primary" %>
  </div>
<% end %>
