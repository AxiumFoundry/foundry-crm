<% content_for :page_title, "Health Check Submissions" %>

<% if @submissions.any? %>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-700 text-xs font-semibold text-gray-400 uppercase tracking-wider">
          <th class="text-left py-4 pr-4">Contact</th>
          <th class="text-left py-4 pr-4">Company</th>
          <th class="text-left py-4 pr-4">Email</th>
          <th class="text-left py-4 pr-4">Status</th>
          <th class="text-left py-4 pr-4">Submitted</th>
          <th class="text-right py-4">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @submissions.each do |submission| %>
          <tr class="border-b border-gray-800 hover:bg-white/5 transition-base">
            <td class="py-4 pr-4 text-white font-semibold"><%= submission.contact_name %></td>
            <td class="py-4 pr-4 text-gray-400"><%= submission.company_name %></td>
            <td class="py-4 pr-4 text-gray-400"><%= submission.email %></td>
            <td class="py-4 pr-4">
              <span class="inline-block px-2 py-1 text-xs font-semibold rounded
                <%= case submission.status
                    when 'pending' then 'bg-yellow-500/20 text-yellow-400'
                    when 'scheduled' then 'bg-blue-500/20 text-blue-400'
                    when 'completed' then 'bg-green-500/20 text-green-400'
                    else 'bg-gray-500/20 text-gray-400'
                    end %>">
                <%= submission.status&.capitalize %>
              </span>
            </td>
            <td class="py-4 pr-4 text-gray-400"><%= submission.created_at.strftime("%b %d, %Y") %></td>
            <td class="py-4 text-right">
              <%= link_to "View", admin_health_check_submission_path(submission), class: "text-sm text-accent hover:text-primary-dark transition-base" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "admin/shared/pagination", pagy: @pagy %>
<% else %>
  <div class="text-center py-16 border border-gray-700 rounded-lg">
    <p class="text-gray-400 text-lg">No health check submissions yet.</p>
  </div>
<% end %>
