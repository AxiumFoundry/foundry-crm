<!-- Hero Section - Modern Studio -->
<section class="section-spacing-md bg-navy overflow-hidden">
  <div class="container mx-auto max-w-6xl px-4 sm:px-8 lg:px-16">
    <%= link_to case_studies_path, class: "inline-flex items-center text-accent hover:text-primary-dark font-semibold text-sm uppercase tracking-wider mb-12 transition-base group" do %>
      <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      All Case Studies
    <% end %>

    <div class="flex flex-wrap items-center gap-4 sm:gap-6 mb-8">
      <h1 class="text-display leading-none"><%= @case_study.client_name %></h1>
      <% if @case_study.website_url %>
        <%= link_to @case_study.website_url, target: "_blank", rel: "noopener noreferrer", class: "text-accent hover:text-primary-dark transition-base" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        <% end %>
      <% end %>
    </div>
    <% if @case_study.industry %>
      <span class="badge">
        <%= @case_study.industry %>
      </span>
    <% end %>
  </div>
</section>

<!-- Main Content - Modern Studio -->
<section class="section-spacing-lg bg-dark-lighter">
  <div class="container mx-auto max-w-6xl px-4 sm:px-8 lg:px-16">
    <article class="card-clean">
      <!-- Rust Accent Bar -->
      <div class="border-l-4 border-primary pl-8 mb-12"></div>

      <!-- Challenge & Solution -->
      <div class="grid md:grid-cols-2 gap-8 md:gap-16 mb-8 md:mb-16">
        <!-- Challenge -->
        <div>
          <h2 class="text-2xl font-bold text-white mb-6">The Challenge</h2>
          <p class="text-lg text-gray-300 leading-relaxed mb-6 font-light"><%= @case_study.challenge_summary %></p>

          <% if @case_study.challenge_details %>
            <div class="text-gray-400 leading-relaxed space-y-4 font-light">
              <%= simple_format(@case_study.challenge_details, class: "mb-0") %>
            </div>
          <% end %>
        </div>

        <!-- Solution -->
        <div>
          <h2 class="text-2xl font-bold text-white mb-6">The Solution</h2>
          <% if @case_study.solution %>
            <div class="text-gray-300 leading-relaxed space-y-4 font-light">
              <%= simple_format(@case_study.solution, class: "mb-0") %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Results -->
      <div class="border-t border-gray-700 pt-16">
        <h2 class="text-2xl font-bold text-white mb-8">The Results</h2>

        <% if @case_study.results %>
          <p class="text-lg text-gray-300 leading-relaxed font-light">
            <%= @case_study.results %>
          </p>
        <% end %>
      </div>

    </article>
  </div>
</section>

<!-- CTA Section - Modern Studio -->
<section class="section-spacing-lg bg-navy">
  <div class="container mx-auto max-w-4xl px-4 sm:px-8 lg:px-16 text-center">
    <h2 class="text-hero mb-8">
      Ready for similar results?
    </h2>
    <p class="text-xl mb-12 max-w-2xl mx-auto font-light text-gray-300 leading-relaxed">
      Let's discuss how I can help your startup ship faster. Get a free technical health check.
    </p>
    <div class="flex flex-col sm:flex-row gap-6 justify-center">
      <%= link_to "Get Your Free Health Check", new_health_check_path,
          class: "btn-primary inline-flex items-center justify-center",
          data: { turbo_frame: "modal" } %>
      <%= link_to "â† Back to All Case Studies", case_studies_path,
          class: "btn-secondary inline-flex items-center justify-center" %>
    </div>
  </div>
</section>

<!-- Modal Frame -->
<%= turbo_frame_tag "modal" %>
