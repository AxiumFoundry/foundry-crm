<!-- Hero Section -->
<section class="section-spacing-md bg-dark overflow-hidden">
  <div class="container mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <%= link_to case_studies_path, class: "inline-flex items-center text-accent hover:text-primary-dark font-semibold mb-8 transition-base group" do %>
      <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      All Case Studies
    <% end %>

    <div class="flex items-center gap-4 mb-6">
      <h1 class="text-display"><%= @case_study.client_name %></h1>
      <% if @case_study.website_url %>
        <%= link_to @case_study.website_url, target: "_blank", rel: "noopener noreferrer", class: "text-accent hover:text-primary-dark transition-base" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        <% end %>
      <% end %>
    </div>
    <% if @case_study.industry %>
      <span class="badge">
        <%= @case_study.industry %>
      </span>
    <% end %>
  </div>
</section>

<!-- Main Content -->
<section class="section-spacing-md bg-dark-lighter">
  <div class="container mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <div class="card-clean mb-8">
      <!-- Challenge & Solution -->
      <div class="grid md:grid-cols-2 gap-12 mb-12">
        <!-- Challenge -->
        <div>
          <div class="flex items-start mb-6">
            <div class="section-divider flex-shrink-0"></div>
            <div>
              <h2 class="text-2xl font-bold text-white mb-4">The Challenge</h2>
              <p class="text-xl text-gray-200 leading-relaxed mb-4"><%= @case_study.challenge_summary %></p>

              <% if @case_study.challenge_details %>
                <div class="text-gray-400 leading-relaxed space-y-3">
                  <%= simple_format(@case_study.challenge_details, class: "mb-0") %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Solution -->
        <div>
          <div class="flex items-start mb-6">
            <div class="section-divider flex-shrink-0"></div>
            <div>
              <h2 class="text-2xl font-bold text-white mb-4">The Solution</h2>
              <% if @case_study.solution %>
                <div class="text-gray-300 leading-relaxed space-y-3">
                  <%= simple_format(@case_study.solution, class: "mb-0") %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Results -->
      <div class="border-t border-gray-800 pt-12">
        <div class="flex items-start mb-8">
          <div class="section-divider flex-shrink-0"></div>
          <div class="flex-1">
            <h2 class="text-2xl font-bold text-white mb-4">The Results</h2>
            <% if @case_study.results %>
              <p class="text-xl text-gray-200 leading-relaxed mb-8">
                <%= @case_study.results %>
              </p>
            <% end %>

            <!-- Metrics -->
            <% if @case_study.metrics %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% @case_study.metrics.each do |key, value| %>
                  <div class="metric-card">
                    <div class="metric-value"><%= value %></div>
                    <div class="metric-label"><%= key %></div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Testimonial -->
      <% if @case_study.testimonial_quote %>
        <div class="border-t border-gray-800 pt-12 mt-12">
          <div class="flex items-start">
            <div class="w-1 bg-accent h-auto mr-6 flex-shrink-0"></div>
            <blockquote class="flex-1">
              <p class="text-2xl text-gray-200 italic mb-6 leading-relaxed">
                "<%= @case_study.testimonial_quote %>"
              </p>
              <cite class="not-italic">
                <div class="font-bold text-white text-lg"><%= @case_study.testimonial_author %></div>
                <div class="text-gray-400"><%= @case_study.testimonial_role %></div>
              </cite>
            </blockquote>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="section-spacing-lg bg-dark">
  <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-hero mb-6">
      Ready for similar results?
    </h2>
    <p class="text-xl mb-8 max-w-2xl mx-auto">
      Let's discuss how I can help your startup ship faster. Get a free technical health check.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Get Your Free Health Check →", new_health_check_path,
          class: "btn-primary inline-flex items-center justify-center text-xl px-12 py-5",
          data: { turbo_frame: "modal" } %>
      <%= link_to "← Back to All Case Studies", case_studies_path,
          class: "px-10 py-5 border-2 border-gray-700 text-white font-semibold rounded-lg hover:border-accent transition-base text-xl inline-flex items-center justify-center" %>
    </div>
  </div>
</section>

<!-- Modal Frame -->
<%= turbo_frame_tag "modal" %>
