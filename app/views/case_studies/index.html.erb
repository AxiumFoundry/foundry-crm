<!-- Hero Section -->
<section class="relative bg-dark section-spacing-md overflow-hidden">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-3xl">
      <h1 class="text-display mb-6">My Work</h1>
      <p class="text-xl md:text-2xl text-gray-300 leading-relaxed">
        Real results from real startups. See how I help companies ship faster without hiring senior developers.
      </p>
    </div>
  </div>
</section>

<!-- Case Studies Grid -->
<section class="section-spacing-md bg-dark-lighter">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <% if @case_studies.any? %>
      <div class="grid md:grid-cols-2 gap-8">
        <% @case_studies.each do |case_study| %>
          <%= link_to case_study_path(case_study), class: "block group" do %>
            <article class="card-clean h-full">
              <!-- Header -->
              <div class="mb-6">
                <h2 class="text-2xl md:text-3xl font-bold text-white mb-3 group-hover:text-accent transition-base">
                  <%= case_study.client_name %>
                </h2>
                <% if case_study.industry %>
                  <span class="badge">
                    <%= case_study.industry %>
                  </span>
                <% end %>
              </div>

              <!-- Challenge Summary -->
              <div class="mb-6">
                <div class="flex items-start mb-3">
                  <div class="section-divider flex-shrink-0"></div>
                  <div>
                    <h3 class="text-sm font-bold text-white uppercase tracking-wide mb-2">The Challenge</h3>
                    <p class="text-gray-300 leading-relaxed"><%= case_study.challenge_summary %></p>
                  </div>
                </div>
              </div>

              <!-- Metrics -->
              <% if case_study.metrics %>
                <div class="flex flex-wrap gap-3 mb-6">
                  <% case_study.metrics.first(3).each do |key, value| %>
                    <div class="flex-1 min-w-[100px] metric-card">
                      <div class="metric-value text-lg"><%= value %></div>
                      <div class="metric-label"><%= key %></div>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <!-- CTA -->
              <div class="flex items-center text-accent font-semibold group-hover:text-primary-dark transition-base">
                Read Full Case Study
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </article>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-24">
        <h3 class="text-2xl font-bold text-white mb-3">No case studies yet</h3>
        <p class="text-gray-400 text-lg mb-8">I'm currently working with amazing startups. Check back soon for updates!</p>
        <%= link_to "Get in Touch →", new_health_check_path,
            class: "btn-primary",
            data: { turbo_frame: "modal" } %>
      </div>
    <% end %>
  </div>
</section>

<!-- CTA Section -->
<section class="section-spacing-lg bg-dark">
  <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-hero mb-6">
      Want similar results?
    </h2>
    <p class="text-xl mb-8 max-w-2xl mx-auto">
      Let's discuss how I can help your startup ship faster. Get a free technical health check.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Get Your Free Health Check →", new_health_check_path,
          class: "btn-primary inline-flex items-center justify-center text-xl px-12 py-5",
          data: { turbo_frame: "modal" } %>
      <%= link_to "← Back to Home", root_path,
          class: "px-10 py-5 border-2 border-gray-700 text-white font-semibold rounded-lg hover:border-accent transition-base text-xl inline-flex items-center justify-center" %>
    </div>
  </div>
</section>

<!-- Modal Frame -->
<%= turbo_frame_tag "modal" %>
