<!-- Hero Section - Modern Studio -->
<section class="relative bg-navy section-spacing-md overflow-hidden">
  <!-- Rust Accent Line -->
  <div class="absolute left-0 md:left-16 top-1/3 w-2 h-32 bg-primary" data-controller="parallax" data-parallax-speed-value="0.3"></div>

  <div class="container mx-auto max-w-7xl px-8 lg:px-16 relative z-10">
    <div class="max-w-3xl pl-0 md:pl-12">
      <h1 class="text-display mb-6">My Work</h1>
      <p class="text-xl md:text-2xl text-gray-300 leading-relaxed font-light">
        Real results from real startups. See how I help companies ship faster without hiring senior developers.
      </p>
    </div>
  </div>
</section>

<!-- Case Studies Grid - Modern Studio -->
<section class="section-spacing-lg bg-dark-lighter">
  <div class="container mx-auto max-w-7xl px-8 lg:px-16">
    <% if @case_studies.any? %>
      <div class="grid md:grid-cols-2 gap-12" data-controller="scroll-reveal" data-scroll-reveal-stagger-value="150">
        <% @case_studies.each do |case_study| %>
          <%= link_to case_study_path(case_study), class: "block group reveal-hidden", data: { scroll_reveal_target: "item" } do %>
            <article class="card-clean h-full hover:border-accent transition-base">
              <!-- Rust Accent Bar -->
              <div class="border-l-4 border-primary pl-8 mb-8"></div>

              <!-- Header -->
              <div class="mb-8">
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 group-hover:text-accent transition-base">
                  <%= case_study.client_name %>
                </h2>
                <% if case_study.industry %>
                  <span class="badge">
                    <%= case_study.industry %>
                  </span>
                <% end %>
              </div>

              <!-- Challenge Summary -->
              <div class="mb-8">
                <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">The Challenge</h3>
                <p class="text-gray-300 leading-relaxed font-light"><%= case_study.challenge_summary %></p>
              </div>

              <!-- Metrics -->
              <% if case_study.metrics %>
                <div class="grid grid-cols-3 gap-4 mb-8 pt-8 border-t border-gray-700">
                  <% case_study.metrics.first(3).each do |key, value| %>
                    <div class="text-center">
                      <div class="text-2xl font-bold text-accent mb-1"><%= value %></div>
                      <div class="text-xs uppercase tracking-wider text-gray-500"><%= key %></div>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <!-- CTA -->
              <div class="flex items-center text-accent font-semibold text-sm uppercase tracking-wider group-hover:text-primary-dark transition-base">
                Read Full Case Study →
              </div>
            </article>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-24">
        <h3 class="text-2xl font-bold text-white mb-3">No case studies yet</h3>
        <p class="text-gray-400 text-lg mb-8 font-light">I'm currently working with amazing startups. Check back soon for updates!</p>
        <%= link_to "Get in Touch →", new_health_check_path,
            class: "btn-primary",
            data: { turbo_frame: "modal" } %>
      </div>
    <% end %>
  </div>
</section>

<!-- CTA Section - Modern Studio -->
<section class="section-spacing-lg bg-navy">
  <div class="container mx-auto max-w-4xl px-8 lg:px-16 text-center">
    <h2 class="text-hero mb-8">
      Want similar results?
    </h2>
    <p class="text-xl mb-12 max-w-2xl mx-auto font-light text-gray-300 leading-relaxed">
      Let's discuss how I can help your startup ship faster. Get a free technical health check.
    </p>
    <div class="flex flex-col sm:flex-row gap-6 justify-center">
      <%= link_to "Get Your Free Health Check", new_health_check_path,
          class: "btn-primary inline-flex items-center justify-center",
          data: { turbo_frame: "modal" } %>
      <%= link_to "← Back to Home", root_path,
          class: "btn-secondary inline-flex items-center justify-center" %>
    </div>
  </div>
</section>

<!-- Modal Frame -->
<%= turbo_frame_tag "modal" %>
