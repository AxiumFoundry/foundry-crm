<!-- Hero Section -->
<section class="relative bg-mesh py-24 overflow-hidden">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-10 right-20 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-3xl">
      <h1 class="text-display mb-6">Our Work</h1>
      <p class="text-xl md:text-2xl text-gray-300 leading-relaxed">
        Real results from real startups. See how we help companies ship faster without hiring senior developers.
      </p>
    </div>
  </div>
</section>

<!-- Case Studies Grid -->
<section class="py-16 bg-gradient-dark">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <% if @case_studies.any? %>
      <div class="grid md:grid-cols-2 gap-8">
        <% @case_studies.each_with_index do |case_study, index| %>
          <%= link_to case_study_path(case_study), class: "block group" do %>
            <article class="glass rounded-2xl p-8 hover-lift transition-all h-full animate-fade-in-up" style="animation-delay: <%= index * 100 %>ms;">
              <!-- Header -->
              <div class="mb-6">
                <h2 class="text-2xl md:text-3xl font-bold text-white mb-3 group-hover:text-green-400 transition-colors">
                  <%= case_study.client_name %>
                </h2>
                <% if case_study.industry %>
                  <span class="inline-block px-4 py-1.5 bg-purple-500/20 text-purple-300 text-sm font-semibold rounded-full border border-purple-500/30">
                    <%= case_study.industry %>
                  </span>
                <% end %>
              </div>

              <!-- Challenge Summary -->
              <div class="mb-6">
                <div class="flex items-center mb-3">
                  <div class="w-8 h-8 bg-red-500/20 rounded-lg flex items-center justify-center mr-2">
                    <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                  </div>
                  <h3 class="text-sm font-bold text-red-400 uppercase tracking-wide">The Challenge</h3>
                </div>
                <p class="text-gray-300 leading-relaxed"><%= case_study.challenge_summary %></p>
              </div>

              <!-- Metrics -->
              <% if case_study.metrics %>
                <div class="flex flex-wrap gap-3 mb-6">
                  <% case_study.metrics.first(3).each do |key, value| %>
                    <div class="flex-1 min-w-[100px] bg-gradient-dark p-3 rounded-xl border border-gray-700">
                      <div class="text-lg font-black gradient-text mb-1 leading-tight"><%= value %></div>
                      <div class="text-xs text-gray-400 leading-tight"><%= key %></div>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <!-- CTA -->
              <div class="flex items-center text-green-400 font-semibold group-hover:text-green-300 transition-colors">
                Read Full Case Study
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </article>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-24">
        <div class="w-20 h-20 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-3">No case studies yet</h3>
        <p class="text-gray-400 text-lg mb-8">We're currently working with amazing startups. Check back soon for updates!</p>
        <%= link_to "Get in Touch →", new_health_check_path,
            class: "inline-block px-8 py-4 bg-gradient-primary text-gray-900 font-bold rounded-lg hover:shadow-lg hover:shadow-green-500/50 transition-all",
            data: { turbo_frame: "modal" } %>
      </div>
    <% end %>
  </div>
</section>

<!-- CTA Section -->
<section class="py-24 bg-mesh">
  <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-hero mb-6">
      Want similar results?
    </h2>
    <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
      Let's discuss how we can help your startup ship faster. Get a free technical health check.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Get Your Free Health Check →", new_health_check_path,
          class: "inline-block px-10 py-5 bg-gradient-primary text-gray-900 font-black rounded-lg text-xl hover:shadow-2xl hover:shadow-green-500/50 transition-all btn-glow",
          data: { turbo_frame: "modal" } %>
      <%= link_to "← Back to Home", root_path,
          class: "inline-block px-10 py-5 glass text-white font-bold rounded-lg text-xl hover:bg-white/10 transition-all" %>
    </div>
  </div>
</section>

<!-- Modal Frame -->
<%= turbo_frame_tag "modal" %>
