<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-MSMPJB9T');</script>
    <!-- End Google Tag Manager -->

    <!-- Google tag (gtag.js) Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-PEP7WFWG07"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-PEP7WFWG07');
    </script>
    <!-- End Google Tag Manager -->

    <title><%= content_for(:title) || site_text("site_title", editable: false) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= site_text("site_description", editable: false) %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="honeybadger-api-key" content="<%= ENV['HONEYBADGER_API_KEY'] %>">
    <meta name="honeybadger-revision" content="<%= ENV.fetch('GIT_REVISION') { `git rev-parse HEAD 2>/dev/null`.strip } %>">

    <%= yield :head %>

    <!-- Inter Font for Swiss Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="icon" href="/favicon.ico" sizes="32x32">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">
    <link rel="icon" href="/icon-512.png" sizes="512x512">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-navy text-cream" data-env="<%= Rails.env %>">
    <% if logged_in? %>
      <%= render "layouts/admin_bar" %>
    <% end %>

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MSMPJB9T"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Navigation - Swiss Minimal -->
    <nav class="fixed w-full <%= logged_in? ? 'top-6' : 'top-0' %> z-50 navbar-solid" data-controller="navbar">
      <div class="container mx-auto max-w-7xl px-4 sm:px-8 lg:px-16">
        <div class="flex justify-between items-center" style="height: 5rem;">
          <!-- Logo -->
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "text-2xl font-bold tracking-tight hover:opacity-80 transition-base" do %>
              <span class="text-white"><%= site_text("nav_logo") %></span>
            <% end %>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-8">
            <%= link_to site_text("nav_work"), case_studies_path, class: "text-sm font-medium uppercase tracking-wider text-gray-300 hover:text-white transition-base" %>
            <%= link_to site_text("nav_about"), about_path, class: "text-sm font-medium uppercase tracking-wider text-gray-300 hover:text-white transition-base" %>
            <%= link_to site_text("nav_cta"), new_health_check_path,
                class: "btn-primary",
                data: { turbo_frame: "modal" } %>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button" class="text-gray-300 hover:text-white focus:outline-none" data-action="click->navbar#toggle">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile menu -->
      <div class="hidden md:hidden border-t border-gray-700" data-navbar-target="menu">
        <div class="px-4 py-6 space-y-4 bg-black">
          <%= link_to site_text("nav_work"), case_studies_path, class: "block text-sm font-medium uppercase tracking-wider text-gray-300 hover:text-white transition-base" %>
          <%= link_to site_text("nav_about"), about_path, class: "block text-sm font-medium uppercase tracking-wider text-gray-300 hover:text-white transition-base" %>
          <%= link_to site_text("nav_cta"), new_health_check_path,
              class: "block btn-primary text-center",
              data: { turbo_frame: "modal" } %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <div class="fixed <%= logged_in? ? 'top-26' : 'top-20' %> right-4 z-40 space-y-2 max-w-md">
      <% if notice.present? %>
        <div class="bg-dark-card border-l-4 border-accent p-4 rounded-lg shadow-lg">
          <p class="text-accent font-medium"><%= notice %></p>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="bg-dark-card border-l-4 border-red-500 p-4 rounded-lg shadow-lg">
          <p class="text-red-400 font-medium"><%= alert %></p>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <main class="<%= logged_in? ? 'pt-22' : 'pt-16' %>">
      <%= yield %>
    </main>

    <%= render "layouts/footer" %>

    <% unless logged_in? %>
      <%= render "shared/chat_widget" %>
    <% end %>
  </body>
</html>
