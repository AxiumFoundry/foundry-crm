<div class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-sm">
    <div class="border-l-4 border-primary pl-6 mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Login</h1>
    </div>

    <%= form_with url: session_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
        <%= f.email_field :email, required: true, autofocus: true,
            class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base",
            placeholder: "email@example.com" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-xs font-semibold text-gray-300 mb-3 uppercase tracking-wider" %>
        <%= f.password_field :password, required: true,
            class: "w-full px-4 py-3 bg-transparent border border-gray-700 text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-base" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Log In", class: "w-full btn-primary text-base py-4 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
