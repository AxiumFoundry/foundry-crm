          <% (1..6).each do |i| %>
            <div class="card-clean reveal-hidden" data-scroll-reveal-target="item">
              <h3 class="text-xl font-bold text-white mb-3"><%= site_text("about_belief_#{i}_title") %></h3>
              <p class="text-gray-300 leading-relaxed"><%= site_text("about_belief_#{i}_description") %></p>
            </div>
