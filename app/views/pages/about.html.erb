<!-- CTA Section -->
<section class="section-spacing-lg bg-dark">
  <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center reveal-hidden" data-controller="scroll-reveal" data-scroll-reveal-root-value="true">
    <h2 class="text-hero mb-6">
      <%= site_text("about_cta_heading") %>
    </h2>
    <p class="text-xl mb-8 max-w-2xl mx-auto">
      <%= site_text("about_cta_description") %>
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to site_text("about_cta_button"), new_health_check_path,
          class: "btn-primary inline-flex items-center justify-center text-xl px-12 py-5",
          data: { turbo_frame: "modal" } %>
      <%= link_to site_text("about_cta_secondary"), case_studies_path,
          class: "px-10 py-5 border-2 border-gray-700 text-white font-semibold rounded-lg hover:border-accent transition-base text-xl inline-flex items-center justify-center" %>
    </div>
  </div>
</section>

