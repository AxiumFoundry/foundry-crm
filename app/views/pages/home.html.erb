        <p class="text-xs uppercase tracking-wider text-gray-500 mb-4 font-semibold">
          Rails Upgrades • Performance Tuning • Cost Reduction
        </p>
        <p class="text-accent text-sm font-semibold uppercase tracking-wider">Learn more →</p>
      <% end %>

      <!-- Deploy & Scale -->
      <%= link_to deploy_scale_path, class: "card-clean hover:border-accent transition-base block group reveal-hidden", data: { scroll_reveal_target: "item" } do %>
        <div class="border-l-4 border-primary pl-8 mb-6"></div>
        <h3 class="text-2xl font-bold text-white mb-6">Deploy & Scale</h3>
        <p class="text-gray-300 leading-relaxed mb-6 font-light">
          Launch anywhere, scale confidently. I handle deployment, monitoring, and infrastructure—without vendor lock-in. Own your stack, control your costs.
        </p>
        <p class="text-xs uppercase tracking-wider text-gray-500 mb-4 font-semibold">
          Kamal • Docker • Any Cloud • Monitoring
        </p>
        <p class="text-accent text-sm font-semibold uppercase tracking-wider">Learn more →</p>
      <% end %>

      <!-- Integrate & Extend -->
      <%= link_to integrate_extend_path, class: "card-clean hover:border-accent transition-base block group reveal-hidden", data: { scroll_reveal_target: "item" } do %>
        <div class="border-l-4 border-primary pl-8 mb-6"></div>
        <h3 class="text-2xl font-bold text-white mb-6">Integrate & Extend</h3>
        <p class="text-gray-300 leading-relaxed mb-6 font-light">
          Connect payments, SMS, email, and other services. Add native iOS apps without hiring mobile teams. Expand your platform without rebuilding from scratch.
        </p>
        <p class="text-xs uppercase tracking-wider text-gray-500 mb-4 font-semibold">
          APIs • Stripe • Twilio • SendGrid • Turbo Native
        </p>
        <p class="text-accent text-sm font-semibold uppercase tracking-wider">Learn more →</p>
      <% end %>

      <!-- White Label AI Agents -->
      <%= link_to ai_agents_path, class: "card-clean hover:border-accent transition-base block group reveal-hidden", data: { scroll_reveal_target: "item" } do %>
        <div class="border-l-4 border-primary pl-8 mb-6"></div>
        <h3 class="text-2xl font-bold text-white mb-6">White Label AI Agents</h3>
        <p class="text-gray-300 leading-relaxed mb-6 font-light">
          Custom AI agents integrated into your product. Customer support, data analysis, content generation, workflow automation. Fully white labeled as your product.
        </p>
        <p class="text-xs uppercase tracking-wider text-gray-500 mb-4 font-semibold">
          LLM Integration • Custom Agents • RAG • Function Calling
