<!-- Featured Case Study - Modern Studio -->
<section class="section-spacing-lg bg-navy">
  <div class="container mx-auto max-w-7xl px-8 lg:px-16">
    <div class="mb-24">
      <h2 class="text-section mb-6 reveal-hidden" data-controller="scroll-reveal" data-scroll-reveal-root-value="true">Latest Success Story</h2>
      <p class="text-lg text-gray-300 max-w-2xl font-light">
        Real results from real startups. See how I help companies ship faster.
      </p>
    </div>

    <% if @featured_case_study %>
      <div class="card-clean max-w-5xl mx-auto reveal-hidden" data-controller="scroll-reveal" data-scroll-reveal-root-value="true" data-scroll-reveal-threshold-value="0.05">
        <!-- Header -->
        <div class="mb-12">
          <div class="flex items-center gap-4 mb-4">
            <h3 class="text-4xl md:text-5xl font-bold text-white"><%= @featured_case_study.client_name %></h3>
            <% if @featured_case_study.website_url %>
              <%= link_to @featured_case_study.website_url, target: "_blank", rel: "noopener noreferrer", class: "text-accent hover:text-primary-dark transition-base" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              <% end %>
            <% end %>
          </div>
          <% if @featured_case_study.industry %>
            <span class="badge">
              <%= @featured_case_study.industry %>
            </span>
          <% end %>
        </div>

        <!-- Challenge & Solution -->
        <div class="grid md:grid-cols-2 gap-12 mb-12">
          <div>
            <div class="border-l-4 border-primary pl-8 mb-4"></div>
            <h4 class="text-2xl font-bold text-white mb-4">The Challenge</h4>
            <p class="text-gray-300 leading-relaxed mb-4 font-light"><%= @featured_case_study.challenge_summary %></p>
            <% if @featured_case_study.challenge_details %>
              <p class="text-gray-400 text-sm font-light"><%= simple_format(@featured_case_study.challenge_details, class: "mb-2") %></p>
            <% end %>
          </div>

          <div>
            <div class="border-l-4 border-primary pl-8 mb-4"></div>
            <h4 class="text-2xl font-bold text-white mb-4">The Solution</h4>
            <% if @featured_case_study.solution %>
              <p class="text-gray-300 leading-relaxed font-light"><%= simple_format(@featured_case_study.solution, class: "mb-2") %></p>
            <% end %>
          </div>
        </div>

        <!-- Results -->
        <div class="border-t border-gray-700 pt-12">
          <div class="border-l-4 border-primary pl-8 mb-4"></div>
          <h4 class="text-2xl font-bold text-white mb-6">The Results</h4>
          <% if @featured_case_study.results %>
            <p class="text-gray-300 mb-8 leading-relaxed font-light"><%= @featured_case_study.results %></p>
          <% end %>

          <% if @featured_case_study.metrics %>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6" data-controller="metric-counter">
              <% @featured_case_study.metrics.each do |key, value| %>
                <div class="metric-card">
                  <div class="metric-value" data-metric-counter-target="value"><%= value %></div>
                  <div class="metric-label"><%= key %></div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Testimonial -->
        <% if @featured_case_study.testimonial_quote %>
          <div class="border-t border-gray-700 pt-12 mt-12">
            <div class="flex items-start gap-8">
              <div class="w-2 bg-accent h-24 shrink-0" data-controller="parallax" data-parallax-speed-value="0.15"></div>
              <blockquote class="flex-1">
                <p class="text-2xl text-gray-300 mb-6 font-light leading-relaxed">
                  "<%= @featured_case_study.testimonial_quote %>"
                </p>
                <cite class="not-italic">
                  <div class="font-bold text-white"><%= @featured_case_study.testimonial_author %></div>
                  <div class="text-gray-400 text-sm uppercase tracking-wider"><%= @featured_case_study.testimonial_role %></div>
                </cite>
              </blockquote>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-16">
        <%= link_to "View All Case Studies →", case_studies_path,
            class: "text-sm font-semibold text-accent hover:text-primary-dark transition-base uppercase tracking-wider" %>
      </div>
    <% end %>
  </div>
</section>

