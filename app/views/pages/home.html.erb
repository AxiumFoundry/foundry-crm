<!-- Hero Section -->
<section class="relative min-h-screen flex items-center bg-dark overflow-hidden">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 relative z-10">
    <div class="max-w-4xl">
      <h1 class="text-display mb-6">
        Ship faster.
        <br>
        <span class="text-accent">Without the headcount.</span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl leading-relaxed">
        Expert technical leadership for ambitious NYC startups. Get senior engineering expertise without the full-time hire.
      </p>

      <div class="flex flex-col sm:flex-row gap-4">
        <%= link_to "Get Free Health Check", new_health_check_path,
            class: "btn-primary inline-flex items-center justify-center",
            data: { turbo_frame: "modal" } %>
        <%= link_to "View Our Work →", case_studies_path,
            class: "px-8 py-4 border-2 border-gray-700 text-white font-semibold rounded-lg hover:border-accent transition-base inline-flex items-center justify-center" %>
      </div>
    </div>
  </div>
</section>

<!-- Credentials Section -->
<section class="section-spacing-md bg-dark-lighter">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-section text-center mb-4">Proven Track Record</h2>
    <p class="text-center mb-16 max-w-2xl mx-auto">
      Trusted by NYC's fastest-growing startups to solve their toughest technical challenges
    </p>

    <div class="grid md:grid-cols-3 gap-8">
      <% @credentials.each do |credential| %>
        <div class="card-clean">
          <div class="flex items-start">
            <div class="section-divider flex-shrink-0"></div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-white mb-2"><%= credential.title %></h3>
              <% if credential.organization %>
                <p class="text-accent text-sm font-semibold mb-3"><%= credential.organization %></p>
              <% end %>
              <% if credential.description %>
                <p class="text-gray-400 leading-relaxed"><%= credential.description %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Featured Case Study -->
<section class="section-spacing-lg bg-dark">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-section mb-4">Latest Success Story</h2>
      <p class="max-w-2xl mx-auto">
        Real results from real startups. See how we help companies ship faster.
      </p>
    </div>

    <% if @featured_case_study %>
      <div class="card-clean max-w-5xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
          <h3 class="text-3xl md:text-4xl font-bold text-white mb-3"><%= @featured_case_study.client_name %></h3>
          <% if @featured_case_study.industry %>
            <span class="badge">
              <%= @featured_case_study.industry %>
            </span>
          <% end %>
        </div>

        <!-- Challenge & Solution -->
        <div class="grid md:grid-cols-2 gap-8 mb-8">
          <div>
            <div class="flex items-start mb-4">
              <div class="section-divider flex-shrink-0"></div>
              <div>
                <h4 class="text-xl font-bold text-white mb-3">The Challenge</h4>
                <p class="text-gray-300 leading-relaxed mb-3"><%= @featured_case_study.challenge_summary %></p>
                <% if @featured_case_study.challenge_details %>
                  <p class="text-gray-400 text-sm"><%= simple_format(@featured_case_study.challenge_details, class: "mb-2") %></p>
                <% end %>
              </div>
            </div>
          </div>

          <div>
            <div class="flex items-start mb-4">
              <div class="section-divider flex-shrink-0"></div>
              <div>
                <h4 class="text-xl font-bold text-white mb-3">The Solution</h4>
                <% if @featured_case_study.solution %>
                  <p class="text-gray-300 leading-relaxed"><%= simple_format(@featured_case_study.solution, class: "mb-2") %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Results -->
        <div class="border-t border-gray-800 pt-8">
          <div class="flex items-start mb-6">
            <div class="section-divider flex-shrink-0"></div>
            <div class="flex-1">
              <h4 class="text-xl font-bold text-white mb-3">The Results</h4>
              <% if @featured_case_study.results %>
                <p class="text-gray-300 mb-6 leading-relaxed"><%= @featured_case_study.results %></p>
              <% end %>

              <% if @featured_case_study.metrics %>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                  <% @featured_case_study.metrics.each do |key, value| %>
                    <div class="metric-card">
                      <div class="metric-value"><%= value %></div>
                      <div class="metric-label"><%= key %></div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Testimonial -->
        <% if @featured_case_study.testimonial_quote %>
          <div class="border-t border-gray-800 pt-8">
            <div class="flex items-start">
              <div class="w-1 bg-accent h-auto mr-6"></div>
              <blockquote class="flex-1">
                <p class="text-xl text-gray-300 italic mb-4">
                  "<%= @featured_case_study.testimonial_quote %>"
                </p>
                <cite class="not-italic">
                  <div class="font-bold text-white"><%= @featured_case_study.testimonial_author %></div>
                  <div class="text-gray-400 text-sm"><%= @featured_case_study.testimonial_role %></div>
                </cite>
              </blockquote>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-12">
        <%= link_to "View All Case Studies →", case_studies_path,
            class: "text-lg font-semibold text-accent hover:text-primary-dark transition-base" %>
      </div>
    <% end %>
  </div>
</section>

