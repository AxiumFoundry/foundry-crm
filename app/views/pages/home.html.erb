<!-- What We Do Section - Modern Studio -->
<section class="section-spacing-lg bg-navy">
  <div class="container mx-auto max-w-7xl px-8 lg:px-16">
    <div class="mb-24">
      <h2 class="text-section mb-6 reveal-hidden" data-controller="scroll-reveal" data-scroll-reveal-root-value="true">What I Do</h2>
      <p class="text-lg text-gray-300 max-w-2xl font-light">
        Full-stack expertise from idea to production. I build, modernize, deploy, and scale.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-16" data-controller="scroll-reveal" data-scroll-reveal-stagger-value="120">
      <!-- Ship Products Faster -->
      <%= link_to ship_faster_path, class: "card-clean hover:border-accent transition-base block group reveal-hidden", data: { scroll_reveal_target: "item" } do %>
